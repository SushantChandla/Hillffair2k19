<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeem Your Candies here"
        android:fontFamily="@font/ps"
        android:layout_gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="30dp"
        android:paddingTop="8dp"
        android:textColor="@color/black"
        android:textSize="15sp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_candies"
        android:layout_gravity="center" />
        <TextView
            android:id="@+id/candies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:fontFamily="@font/ps"
            android:layout_gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:textColor="@color/black"
            android:textSize="20sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <ImageView
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:rotation="45"
                    android:id="@+id/coupon1"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_coupon"/>
                <ImageView
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:id="@+id/coupon2"
                    android:rotation="45"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_coupon"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <ImageView
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:rotation="45"
                    android:id="@+id/coupon3"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_coupon"/>
                <ImageView
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:rotation="45"
                    android:layout_weight="1"
                    android:id="@+id/coupon4"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_coupon"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <ImageView
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:rotation="45"
                    android:id="@+id/coupon5"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_coupon"/>
                <ImageView
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:rotation="45"
                    android:layout_weight="1"
                    android:id="@+id/coupon6"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_coupon"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Helllo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Helllo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Helllo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Helllo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Helllo" />
            <TextView
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="220dp"
                android:text="Helllo"/>
        </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
